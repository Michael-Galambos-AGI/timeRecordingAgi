<mvc:View controllerName="sap.ui.agi.timeRecording.controller.Week"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid">

    <VBox class="sapUiSmallMargin sapThemeBaseBG-black" backgroundDesign="Translucent">
        <Input value="{/time1}" description="start time : {/time1}" valueLiveUpdate="true" width="50%"/>
        <Input value="{/time2}" description="start time : {/time2}" valueLiveUpdate="true" width="50%"/>
        <Button text="sus" press="onPress" />

        <grid:CSSGrid gridTemplateColumns="50px repeat(12,1fr)" gridTemplateRows="50px 100%" gridGap="2px">
            <VBox class="boxHours">
                <Text text="date"/>
            </VBox>
            <VBox class="boxHours">
                <Text text="1"/>
            </VBox>
            <VBox class="boxHours">
                <Text text="2"/>
