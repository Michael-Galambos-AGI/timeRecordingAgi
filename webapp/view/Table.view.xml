<mvc:View xmlns:table="sap.ui.table"
    xmlns:cssgrid="sap.ui.layout.cssgrid" controllerName="sap.ui.agi.timeRecording.controller.Table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core" displayBlock="true" height="100%" busyIndicatorDelay="0">
    <cssgrid:CSSGrid gridTemplateColumns="3fr 1fr">
        <VBox backgroundDesign="Solid" class="sapUiSmallMargin">
            <Button text="addtimer" press="onAddTimer"></Button>
            <ScrollContainer height="28vh" horizontal="false" vertical="true">
                <Table items="{
                    path : 'timers>/',
                    sorter : {
                       path : 'timers>id' 
                    }
                }">

                    <columns>
                        <Column>
                            <Text text="id"/>
                        </Column>
                        <Column>
                            <Text text="discription"/>
                        </Column>
                        <Column>
                            <Text text="duration"/>
                        </Column>
                        <Column>
                            <Text text="Play"/>
                        </Column>
                        <Column>
                            <Text text="sus"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{timers>id}" />
                                <Text text="{timers>discription}" />
                                <Text text="{timers>duration} sec" />
                                <Button icon="sap-icon://media-play" press="onContinueTimer" /><!--(${timers>id}) -->
                                <Button icon="sap-icon://delete" press="onDeleteRow" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </VBox>
        <VBox backgroundDesign="Solid" class="sapUiSmallMargin">
            
        </VBox>

    </cssgrid:CSSGrid>


</mvc:View>