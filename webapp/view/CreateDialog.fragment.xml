<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified">
    <Dialog id="createDialog" contentWidth="auto"
    title ="{i18n>createDialogTitle}">
        <VBox class="sapUiResponsiveMargin">
            <Label text="tag"></Label>
            <ComboBox items="{user>/eligibleTags}" value="{createDialogModel>/tag}">
                <core:Item key="{user>name}" text="{user>name}" />

            </ComboBox>
            <Label text="{i18n>createDialogDescriptionLable}"></Label>
            <Input width="100%" value="{createDialogModel>/discription}" valueLiveUpdate="true"/>
            <Label text="duration"></Label>
            <TimePicker value="{createDialogModel>/duration}" valueFormat="HH:mm" displayFormat="HH:mm" change="handleChange" placeholder="00:00" />
            <u:Calendar id="createDialogCalendar" select="handlecreateDialogCalendarSelect" showCurrentDateButton="true" showWeekNumbers="false" intervalSelection="true"/>

        </VBox>
        <beginButton>
            <Button text="{i18n>createDialogSaveButton}" press="onCreateDialogSaveButton"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>createDialogCancelButton}" press="onCreateDialogCancleButton"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>