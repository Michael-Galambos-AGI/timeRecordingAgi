<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="DeleteAllDialog" contentWidth="auto"
    title ="{i18n>createDialogTitle}">
        <VBox class="sapUiResponsiveMargin">
            <Text text="please type: 'DELETE'"/>
            <Input width="100%" value="{deleteAllModel>/text}" valueLiveUpdate="true"/>
        </VBox>
        <beginButton>
            <Button text="cancle" press="closeDeleteAllDialog"/>
        </beginButton>
        <endButton>
            <Button text="delete" press="deleteAll"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>