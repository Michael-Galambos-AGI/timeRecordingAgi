<mvc:View controllerName="sap.ui.agi.timeRecording.controller.SideNavigation"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt" height="100%" class="side-navigation-demo">
    <FlexBox alignItems="Start" justifyContent="End" height="100%">
        <ScrollContainer vertical="true" horizontal="false" height="100%">
            <Table items="{
                path : 'eligibleTags>/'
            }">
                <columns>
                    <Column width="100%">
                    </Column>

                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <VBox>
                                <Text text="{eligibleTags>tagName}"/>
                                <Label text="{eligibleTags>duration}"/>
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </FlexBox>
</mvc:View>